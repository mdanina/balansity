# Пример конфигурации Nginx для проекта Balansity
# Скопируйте этот файл в /etc/nginx/sites-available/balansity
# и замените ваш-домен.com на ваш реальный домен

server {
    listen 80;
    server_name ваш-домен.com www.ваш-домен.com;

    # Редирект на HTTPS (раскомментируйте после настройки SSL)
    # return 301 https://$server_name$request_uri;

    # Корневая директория со статическими файлами фронтенда
    root /var/www/balansity/dist;
    index index.html;

    # Логи
    access_log /var/log/nginx/balansity-access.log;
    error_log /var/log/nginx/balansity-error.log;

    # Основная локация - SPA роутинг
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Кэширование статических файлов
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Проксирование API запросов к queue-worker
    location /api {
        proxy_pass http://localhost:3001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # Таймауты для долгих запросов (webhook)
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # Блокировка доступа к скрытым файлам
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}

